<% if current_user.present? && current_user.favorites?(brand) %>
  <%= link_to brand_favorite_path(brand.name), method: :delete, remote: true do %>
  	<span class="upvote-container"><i class="fa fa-heart-o" aria-hidden="true"></i></span>
  <% end %>
<% else %>
  <%= link_to brand_favorite_path(brand.name), method: :post, remote: true do %>
  	<span class="upvote-container"><i class="fa fa-heart" aria-hidden="true"></i></span>
  <% end %>
<% end %>

