<div class="container mobile-container">
	<div class="row">
    	<div class="col-sm-8 col-sm-offset-2 sign-up-div card"><h1>Change your password</h1>
    	<hr>
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
			  <%= devise_error_messages! %>
			  <%= f.hidden_field :reset_password_token %>

			  <div><%= f.label :password, "New password" %><br />
			  <%= f.password_field :password, :autofocus => true, class: "form-control" %></div>
			  <br>

			  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
			  <%= f.password_field :password_confirmation, class: "form-control" %></div>
			  <br>

			  <div><%= f.button "Change my password", class: "btn btn-gradient btn-block card", 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Changing password...", style: "background: #{@market.first_color};  background: -webkit-linear-gradient(left, #{@market.first_color} , #{@market.second_color}); background: -o-linear-gradient(right, #{@market.first_color}, #{@market.second_color}); background: -moz-linear-gradient(right, #{@market.first_color}, #{@market.second_color}); background: linear-gradient(to right, #{@market.first_color} , #{@market.second_color});" %></div>
			<% end %>
			<hr>
			<%= render "devise/shared/links" %>

		</div>
	</div>
</div>
