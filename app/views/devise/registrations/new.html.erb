<div class="container mobile-container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 sign-up-div card">
      <h1>Join <%= @market.title %>'s exclusive SlashForm community.</h1>
      <h4>The Marketplace/Forum/TBD platform.</h4>
      <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <% resource.errors.full_messages.each do |msg| %>
              <div><%= msg %></div>
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.text_field :username, required: true, autofocus: true, placeholder: "Username", class: "form-control" %>
        </div>  

        <div class="form-group">
          <%= f.email_field :email, required: true, placeholder: "School Email Address", class: "form-control" %>
        </div>                

        <div class="form-group">
          <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password", class: "form-control" %>
        </div>

        <%= f.hidden_field :market_id, :value => @market.id %> 
          
        <div class="form-group">
          <%= f.button "Sign up", class: "btn btn-block btn-gradient card", 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Signing up...".html_safe, style: "background: #{@market.first_color};  background: -webkit-linear-gradient(left, #{@market.first_color} , #{@market.second_color}); background: -o-linear-gradient(right, #{@market.first_color}, #{@market.second_color}); background: -moz-linear-gradient(right, #{@market.first_color}, #{@market.second_color}); background: linear-gradient(to right, #{@market.first_color} , #{@market.second_color});"%>
        </div>
      <% end %>
    <hr>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

