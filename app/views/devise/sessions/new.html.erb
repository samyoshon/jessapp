<div class="container mobile-container">
	<div class="row">
    	<div class="col-sm-8 col-sm-offset-2 sign-up-div card">
			<h1>Log in</h1>
			<hr>
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, required: true, :autofocus => true, class: "form-control" %></div>

			  <div><%= f.label :password %><br />
			  <%= f.password_field :password, required: true, class: "form-control" %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			  <% end -%>

			  <br>
			  <div><%= f.button "Log in", class: "btn btn-block btn-gradient card", 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Logging in...", style: "background: #{@market.first_color};  background: -webkit-linear-gradient(left, #{@market.first_color} , #{@market.second_color}); background: -o-linear-gradient(right, #{@market.first_color}, #{@market.second_color}); background: -moz-linear-gradient(right, #{@market.first_color}, #{@market.second_color}); background: linear-gradient(to right, #{@market.first_color} , #{@market.second_color});" %></div>
			<% end %>
			<hr>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>