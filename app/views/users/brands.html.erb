<div class="content-container">
  <%= render partial: "users/sidenav" %>

  <div class="container col-md-10 col-sm-12 container-mobile-product">
    <h1>Edit Brand</h1>

    <%= form_for @brand, url: user_update_brands_path, method: :put, html: {id: @brand.id} do |f| %>
      
      <% if @brand.logo.url.present? %>
        <div id="preview-logo"><%= image_tag @brand.logo.url %></div>
      <% elsif %>
        <div id="preview-logo"></div>
      <% end %>
      </br>
      <div class="input-logo"><%= f.file_field :logo, :onchange => "previewLogo()", placeholder: "Profile Image", accept: ".jpg, .jpeg, .gif, .png", id: "image-form-logo" %></div>
      </br>

      <div class="form-group">
        <div><%= f.label :brand_name %><br />
        <%= f.text_field :name, required: true, autofocus: true, placeholder: "Brand Name", class: "form-control" %>
        </div>
      </div>  
      <div class="form-group">
        <div><%= f.label :brand_tagline %><br />
        <%= f.text_field :tagline, required: true, autofocus: true, placeholder: "Brand Description", class: "form-control" %>
        </div>
      </div>  
      <hr>
      <div class="form-group">
        <div><%= f.label :about %><br />
        <%= f.trix_editor :about, required: true, autofocus: true, placeholder: "Tell us about your company...", class: "form-control" %>
        </div>
      </div> 
      <hr>
      <div class="form-group">
        <div><%= f.label :lookbook %><br />
        <% if @brand.images? %>
          <div id="preview">
            <% @brand.images.each do |p| %>
              <%= image_tag(p.url, class: "image-container-preview") %>
            <% end %>
          </div>
        <% elsif %>  
          <div id="preview"></div>
        <% end %>
          <div class="input-image"><%= f.file_field :images, :onchange => "previewFiles()", multiple: true, placeholder: "Image", accept: ".jpg, .jpeg, .gif, .png", class: "form-control", id: "image-form" %></div>
          <%= f.hidden_field :images_cache, multiple: true %>
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <div><%= f.label :website %><br />
            <%= f.url_field :website, required: true, placeholder: "http://www.example.com", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <div><%= f.label :email %><br />
            <%= f.email_field :email, required: true, placeholder: "email@example.com", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
         
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group" id="input-container">
            <%= f.url_field :youtube, placeholder: "http://www.youtube.com/example", class: "form-control", id: "input-social" %>
            <i class="fa fa-youtube" aria-hidden="true" id="input-social-icon"></i>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group" id="input-container">
            <%= f.text_field :facebook, placeholder: "Facebook", class: "form-control", id: "input-social" %>
            <i class="fa fa-facebook-official" aria-hidden="true" id="input-social-icon"></i>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group" id="input-container">
            <%= f.text_field :instagram, placeholder: "Instagram", class: "form-control", id: "input-social" %>
            <i class="fa fa-instagram" aria-hidden="true" id="input-social-icon"></i>
          </div>
        </div>
         <div class="col-sm-3">
          <div class="form-group" id="input-container">
            <%= f.text_field :twitter, placeholder: "Twitter", class: "form-control", id: "input-social" %>
            <i class="fa fa-twitter" aria-hidden="true" id="input-social-icon"></i>
          </div>
        </div>
      </div>
      <hr>
      <div class="form-group">
        <div><%= f.label :return_policy %><br />
        <%= f.trix_editor :return_policy, required: true, autofocus: true, placeholder: "Return Policy", class: "form-control" %>
        </div>
      </div> 
      <hr>
      <div class="form-group">
        <div><%= f.label :shipping_policy %><br />
        <%= f.trix_editor :shipping_policy, required: true, autofocus: true, placeholder: "Shipping Policy", class: "form-control" %>
        </div>
      </div> 
      <hr>
      <div class="form-group">
        <div><%= f.label :other_policy %><br />
        <%= f.trix_editor :other_policy, required: true, autofocus: true, placeholder: "Additional Policy", class: "form-control" %>
        </div>
      </div> 
      <hr>
      <div><%= f.button "Update", class: "btn btn-primary card", style: "background-color: #{@market.first_color}; border-color: #{@market.first_color}" %></div>
    <% end %>
 </div>
</div>